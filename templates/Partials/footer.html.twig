{% block stylesheets %}
<style>
footer {
    position:absolute;
    width: 100vw;
    top:360%;
}
#footer {
    color: white;
    color: var(--ghostWhite);
    background-color: black;
    padding: 50px;
    /*position: absolute;
    width: 100%;
    bottom:0;*/
    margin: 0;
    background-image: url('{{ asset('IMG/grenade-orange-blurry.jpg') }}');
    background-size: cover;
    -webkit-backdrop-filter: blur(55px);
    backdrop-filter: blur(55px);
    /*box-shadow: 0px -5px 24px rgba(39, 38, 53, .5);*/
}

#footer > * {
    z-index: 3;
    
}

#footer::before {
    position:absolute;
    content: '';
    z-index: 2;
    top:10%;
    width: 70%;
    height: 80%;
    top:0;
    width: 100%;
    height: 100%;
    background-color: #272635;
    background-color: black;
    opacity: .7;  
}
#zig-zags {
    position: relative;
    z-index: -10;
    height: 150vh;
    width: 120%;
}
#zig-zags::after {
    content: '';
    position: absolute;
    z-index: -8;
    width: 100%;
    overflow-x: hidden;
    background: linear-gradient( #F08632 10%, #DD2D4A 90%);
    -webkit-mask-image: url('{{ asset('IMG/zig-zags.png') }}');
    mask-image: url('{{ asset('IMG/zig-zags.png') }}');
    -webkit-mask-size: 100%;
    mask-size: 100%;
    -webkit-mask-repeat: no-repeat;
    mask-repeat: no-repeat;
    height: 100%;
    {# top: 0; #}
    bottom:0;
    /*homePage*/
}



.social-network-icons > img {
    height: 30px;
    margin: 5px;
}

{# .centered-txt {
    text-align: center;
} #}

footer #straw {
    height: 55px;
    margin: 10px;
    margin-left: 120px;
}

#footer {
    display: flex;
    justify-content: center;
}

#footer > div {
    width: 20vw;
}

#footer > div:nth-child(1) > *, footer > div:nth-child(2) > * , .footer-adresses-part > *{
    text-align: center;
} 

#footer > div:nth-child(2) {
    margin-top: 65px;
}

.social-network-icons {
    margin-top: 20px;
}

.footer-adresses-part > h4 {
    margin-top: 40px;
    margin-bottom: 20px;
}

</style>
{% endblock %}
